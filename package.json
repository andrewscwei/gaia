{
  "name": "@andrewscwei/gaia",
  "version": "0.16.0",
  "description": "Geospatial utility functions for Node.js, powered by Turf.js",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha --timeout 10000 --reporter spec --full-trace --colors --exit \"build/**/*.spec.js\"",
    "test:ts": "cross-env DEBUG=gaia* NODE_ENV=development mocha -r ts-node/register --timeout 10000 --reporter spec --full-trace --colors --exit \"src/**/*.spec.ts\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/gaia.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/gaia/issues"
  },
  "homepage": "https://github.com/andrewscwei/gaia#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@turf/turf": "^6.4.0",
    "@types/chai": "^4.2.21",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "mocha": "^9.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@turf/nearest-point-to-line": "^6.4.0",
    "@turf/point-to-line-distance": "^6.4.0",
    "debug": "^4.3.2",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "@turf/turf": "^6.4.0"
  }
}
