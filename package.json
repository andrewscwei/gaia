{
  "name": "@andrewscwei/gaia",
  "version": "0.19.0",
  "description": "Geospatial utility functions for Node.js, powered by Turf.js",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha -b -c --timeout 10000 --extension spec.js --recursive --exit \"build/$npm_config_files\"",
    "test:ts": "cross-env DEBUG=gaia* NODE_ENV=development mocha -r ts-node/register -b -c --timeout 10000 --extension spec.ts --recursive --exit \"src/$npm_config_files\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/gaia.git"
  },
  "files": [
    "build"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewscwei/gaia/issues"
  },
  "homepage": "https://github.com/andrewscwei/gaia#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@turf/turf": "^6.5.0",
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.14.190",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@turf/nearest-point-to-line": "^6.5.0",
    "@turf/point-to-line-distance": "^6.5.0",
    "debug": "^4.3.4",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "@turf/turf": "^6.5.0"
  }
}
